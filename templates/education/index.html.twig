{% extends 'base.html.twig' %}

{% block title %}Education index{% endblock %}

{% block body %}
    <h1>Education index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DiplomaTitle</th>
                <th>Establishment</th>
                <th>StartAt</th>
                <th>EndAt</th>
                <th>Current</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for education in education %}
            <tr>
                <td>{{ education.id }}</td>
                <td>{{ education.diplomaTitle }}</td>
                <td>{{ education.establishment }}</td>
                <td>{{ education.startAt ? education.startAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ education.endAt ? education.endAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ education.current ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('education_show', {'id': education.id}) }}">show</a>
                    <a href="{{ path('education_edit', {'id': education.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('education_new') }}">Create new</a>
{% endblock %}
