{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block body %}
    {% include "menu.html.twig" %}

    <h1>Training</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ training.title }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ training.region }}</td>
            </tr>
            <tr>
                <th>FullAddress</th>
                <td>{{ training.fullAddress }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ training.createdAt ? training.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ training.description }}</td>
            </tr>
            <tr>
                <th>About</th>
                <td>{{ training.about }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('training_index') }}">back to list</a>

    <a href="{{ path('training_edit', {'slug': training.slug}) }}">edit</a>

    {{ include('training/_delete_form.html.twig') }}
{% endblock %}
