{% extends 'base.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}
    <h1>Experience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>JobTitle</th>
                <th>StartAt</th>
                <th>EndAt</th>
                <th>Current</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.company }}</td>
                <td>{{ experience.jobTitle }}</td>
                <td>{{ experience.startAt ? experience.startAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ experience.endAt ? experience.endAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ experience.current ? 'Yes' : 'No' }}</td>
                <td>{{ experience.description }}</td>
                <td>
                    <a href="{{ path('experience_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('experience_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('experience_new') }}">Create new</a>
{% endblock %}
