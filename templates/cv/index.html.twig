{% extends 'base.html.twig' %}

{% block title %}CV index{% endblock %}

{% block body %}
    <h1>CV index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>EducationLevel</th>
                <th>YearsOfExperience</th>
                <th>LastUpdateAt</th>
                <th>Views</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td>{{ cv.id }}</td>
                <td>{{ cv.educationLevel }}</td>
                <td>{{ cv.yearsOfExperience }}</td>
                <td>{{ cv.lastUpdateAt ? cv.lastUpdateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cv.views }}</td>
                <td>
                    <a href="{{ path('cv_show', {'id': cv.id}) }}">show</a>
                    <a href="{{ path('cv_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cv_new') }}">Create new</a>
{% endblock %}
