{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>Job index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Address</th>
                <th>CreatedAt</th>
                <th>ExpireAt</th>
                <th>PostsNumber</th>
                <th>Type</th>
                <th>ExperienceMin</th>
                <th>ExperienceMax</th>
                <th>EducationLevel</th>
                <th>RequiredLanguages</th>
                <th>Description</th>
                <th>Requirements</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.title }}</td>
                <td>{{ job.address }}</td>
                <td>{{ job.createdAt ? job.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.expireAt ? job.expireAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.postsNumber }}</td>
                <td>{{ job.type }}</td>
                <td>{{ job.experienceMin }}</td>
                <td>{{ job.experienceMax }}</td>
                <td>{{ job.educationLevel }}</td>
                <td>{{ job.requiredLanguages }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.requirements }}</td>
                <td>
                    <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_new') }}">Create new</a>
{% endblock %}
