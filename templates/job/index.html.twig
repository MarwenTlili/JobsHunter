{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    {% include "menu.html.twig" %}

    <h1>Job index</h1>

    {% for job in jobs %}
        <div class="job">
            <div>
                {{ job.title }}
                {{ job.createdAt ? job.createdAt|date('Y-m-d') : '' }}
            </div>
            {{ job.address }}
            {{ job.description[:50] ~ '...'}}
            
            <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
            
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
            {% endif %}
            
        </div><hr>
    {% else %}
        <div>
            <p>no records found</p>
        </div>
    {% endfor %}

    <a href="{{ path('job_new') }}">Create new</a>
{% endblock %}
